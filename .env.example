# Database
DATABASE_URL=postgresql://username:password@localhost:5432/depin

# JWT Secret (generate a secure random string for production)
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

# App Settings
DEBUG=True
ENVIRONMENT=development

# CORS Settings (adjust for production)
ALLOWED_ORIGINS=*

# Logging
LOG_LEVEL=INFO

# Internal Service Authentication
# Generate a strong random key for production: openssl rand -hex 32
INTERNAL_API_KEY=your-internal-api-key-change-this-in-production

# API URLs for service-to-service communication
# In Docker, this should be http://api:8000
# For local development, use http://localhost:8000
API_INTERNAL_URL=

# PGDN Reporter (AI Analysis)
AI_PROVIDER_REPORTING=openai
ANTHROPIC_API_KEY=your-anthropic-api-key-here
OPENAI_API_KEY=your-openai-api-key-here
